<% if @reservation.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@reservation.errors.count, "件のエラーがあります") %> </h2>
    <ul>
      <% @reservation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @reservation, url: confirm_reservations_path, method: :post, local: true) do |f| %>
    <div class="fields">
      <div class="field">
        <%= f.label :check_in, "チェックイン日" %><br>
        <%= f.date_field :check_in, autocomplete: "off" %>
      </div>
  
      <div class="field">
        <%= f.label :check_out, "チェックアウト日" %><br>
        <%= f.date_field :check_out, autocomplete: "off" %>
      </div>
  
      <div class="field">
        <%= f.label :number_of_guests, "人数" %><br>
        <%= f.number_field :number_of_guests, min: 1, placeholder: "0  人", autocomplete: "off" %>
      </div>
  
      <%= f.hidden_field :room_id, value: @room.id, autocomplete: "off" %>
      <%= f.submit "予約する", autocomplete: "off" %>
    </div>
  <% end %>
  