<h2>施設の新規登録</h2>

<% if @room.errors.any? %>
  <div id="error_explanation">
    <h4>新規登録に失敗しました</h4>
    <ul>
      <% @room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @room do |f| %>
    <%= f.label :title, "施設名" %>
    <%= f.text_field :title %>

    <%= f.label :body, "紹介文" %>
    <%= f.text_area :body %>

    <%= f.label :price, "金額" %>
    <%= f.text_field :price %>

    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>

    <%= f.label :image, "画像" %>
    <%= f.file_field :image %>

    <%= f.submit %>
    <%= link_to "キャンセル", :back %>

<% end %>
